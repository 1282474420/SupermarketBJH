	border-radius: 20rpx;
	display: inline-block;
	background-color: #fff;
	width: 335rpx;
	position: relative;
	margin-left: 20rpx;
	margin-top: 20rpx;
}
.groupImg{
	width: 335rpx;
	height: 335rpx;
}
.groupName{
	margin-top: 18rpx;
	margin-left: 20rpx;
	font-size: 26rpx;
	width: 250rpx;
	overflow: hidden;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.content-count{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
